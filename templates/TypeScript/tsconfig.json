{
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "./public/",
    "paths": {
      "components/*": ["src/components/*"],
      "modules/*": ["src/modules/*"],
      "utils/*": ["src/utils/*"]
    }
  },
  "include": ["./src/**/*"]
}
